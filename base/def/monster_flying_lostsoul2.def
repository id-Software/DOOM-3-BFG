export jay {
	options -prefix LOST_ -keep flame -parent flame Head -sourcedir models/monsters/lostsoul2/cycles -destdir models/md5/monsters/lostsoul2

	mesh	idle1.mb -dest lostsoul2

	anim	initial.mb
	anim	idle1.mb
	anim	walk1.mb
	anim	run1.mb
	anim	sight.mb
	anim	attack1.mb
	anim	attack2.mb
	anim	pain1.mb
	anim	pain2.mb
	anim	death1.mb
	anim	charge.mb

}

model monster_flying_lostsoul2 {
	mesh							models/md5/monsters/lostsoul2/lostsoul2.md5mesh
	channel torso					( *origin )
	
	anim af_pose					models/md5/monsters/lostsoul2/initial.md5anim									

	anim initial					models/md5/monsters/lostsoul2/initial.md5anim
	anim idle						models/md5/monsters/lostsoul2/walk1.md5anim //models/md5/monsters/lostsoul/idle1.md5anim
	anim fly						models/md5/monsters/lostsoul2/run1.md5anim
	anim walk						models/md5/monsters/lostsoul2/walk1.md5anim
	anim run						models/md5/monsters/lostsoul2/run1.md5anim
	anim sight						models/md5/monsters/lostsoul2/sight.md5anim {
		frame 23						sound_voice snd_sight
	}
	anim melee_attack1				models/md5/monsters/lostsoul2/attack1.md5anim {
		frame 9							melee melee_lostsoul
	}
	anim melee_attack2				models/md5/monsters/lostsoul2/attack2.md5anim {
		frame 19						melee melee_lostsoul
	}
	anim pain1						models/md5/monsters/lostsoul2/pain1.md5anim {
		frame 1							sound_voice snd_pain
	}
	anim pain2						models/md5/monsters/lostsoul2/pain2.md5anim {
		frame 1							sound_voice snd_pain
	}
	anim death1						models/md5/monsters/lostsoul2/death1.md5anim {
		frame 1							sound_voice snd_death
	}
	anim charge						models/md5/monsters/lostsoul2/charge.md5anim
}

